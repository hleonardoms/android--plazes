<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Plazes" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/gray_900</item>
         <item name="colorSecondaryContainer">@color/gray_200</item>

        <item name="textAppearanceTitleMedium">@style/TextAppearance.Plazes.TitleMedium</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Plazes.SmallComponent</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Plazes.BodySmall</item>

        <item name="textAppearanceBodyLarge">@style/TextAppearance.Plazes.Body.Large</item>

        <item name="textInputStyle">@style/Widget.Plazes.TextInputLayout</item>

        <item name="bottomNavigationStyle">@style/Widget.Plazes.BottomNavigationView</item>
    </style>

    <style name="Theme.Plazes" parent="Base.Theme.Plazes" />


    <style name="TextAppearance.Plazes.Headline.Large" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="TextAppearance.Plazes.Body1" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="TextAppearance.Plazes.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="TextAppearance.Plazes.Body.Large" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_900</item>
    </style>

    <style name="Button.Plazes.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button.Plazes.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/gray_200</item>
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
    </style>



    <!--  Bottom Navigation  -->
    <style name="Widget.Plazes.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/gray_50</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Plazes.BottomNavigationView</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.Plazes.BottomNavigationView" parent="">
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorOnSurfaceVariant">@color/gray_500</item>
    </style>


    <!--  Global styles  -->
    <style name="TextAppearance.Plazes.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/fontfamily_outfit</item>
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
    </style>

    <style name="TextAppearance.Plazes.Toolbar.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/fontfamily_outfit</item>
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="ShapeAppearance.Plazes.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TextAppearance.Plazes.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/fontfamily_outfit</item>
        <item name="android:fontFamily">@font/fontfamily_outfit</item>
    </style>

    <style name="Widget.Plazes.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Plazes.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Plazes.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.Plazes.TextInputLayout" parent="">
        <item name="colorPrimary">@color/gray_900</item>
        <item name="colorOnSurface">@color/gray_600</item>
        <item name="colorError">@color/amber_500</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Plazes.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Plazes.BodySmall</item>
        <item name="editTextStyle">@style/Widget.Plazes.TextInputEditText.FilledBox</item>
    </style>

    <style name="Widget.Plazes.TextInputEditText.FilledBox" parent="Widget.Material3.TextInputEditText.FilledBox">
        <item name="android:backgroundTint">@color/gray_200</item>
    </style>



</resources>