<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/gray_50"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/imageViewProfilePicture"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cardViewProfilePicture"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.Plazes.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:text="Jessica Thompson" />

            <TextView
                style="@style/TextAppearance.Plazes.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:textColor="@color/gray_500"
                android:textSize="12sp"
                android:text="2h ago" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_dots_vertical_solid_24"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/iamgen1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewLikesTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="230"
            android:textSize="16sp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableStart="@drawable/ic_thumbs_up_outline_24"
            android:drawablePadding="8dp"
            android:gravity="center"
            style="@style/TextAppearance.Plazes.Body1"/>

        <TextView
            android:id="@+id/textViewCommentsTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewLikesTotal"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="18dp"
            android:text="4"
            android:textSize="16sp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableStart="@drawable/ic_message_dots_outline_24"
            android:drawablePadding="8dp"
            android:gravity="center"
            style="@style/TextAppearance.Plazes.Body1"/>


        <TextView
            android:id="@+id/textViewShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/textViewCommentsTotal"
            android:layout_centerVertical="true"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:drawableStart="@drawable/ic_share_all_outline_24"
            android:gravity="center"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/ic_bookmark_outline_24"/>


    </RelativeLayout>

</LinearLayout>